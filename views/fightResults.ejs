<%- include('partials/head', { pageTitle: 'Fight Results' }) %>
<%- include('partials/nav') %>

<main class="fight-results">
    <h1>Fight Results</h1>
    <div class="result-container">
        <div class="result-panel">
            <h2>Participants</h2>
            <p><strong>Hero 1:</strong> <%= hero1Name %></p>
            <p><strong>Hero 2:</strong> <%= hero2Name %></p>
            <h2>Winner</h2>
            <% if (winnerName && imageUrl && winnerImage) { %>
                <p><%= winnerName %></p>
                <div class="winner-image">
                    <img src="<%= winnerImage %>" alt="Winner Image">
                </div>
            <% } else { %>
                <p>No winner determined or error in processing the fight.</p>
            <% } %>
        </div>
        <div class="fight-image">
            <% if (imageUrl) { %>
                <img src="<%= imageUrl %>" alt="Generated Fight Scene Image">
            <% } %>
        </div>
    </div>
</main>

<%- include('partials/footer') %>